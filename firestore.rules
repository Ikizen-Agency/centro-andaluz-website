/**
 * @file Firebase Security Rules for Centro Andaluz de la Habana.
 *
 * @core_philosophy This ruleset provides public read access to Events, Members, and BlogPosts collections. All write operations are disabled for this prototype.
 *
 * @data_structure
 * - /events/{eventId}: Stores event data.
 * - /members/{memberId}: Stores member data.
 * - /blog_posts/{blogPostId}: Stores blog post data.
 *
 * @key_security_decisions
 * - Public read access for all collections.
 * - No write access is allowed in this prototype.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows public read access to events. No write access is allowed in this prototype.
     * @path /events/{eventId}
     * @allow (get, list) - Any user can read event data.
     * @deny (create, update, delete) - No user can create, update, or delete event data in this prototype.
     * @principle Allows public read access.
     */
    match /events/{eventId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to members. No write access is allowed in this prototype.
     * @path /members/{memberId}
     * @allow (get, list) - Any user can read member data.
     * @deny (create, update, delete) - No user can create, update, or delete member data in this prototype.
     * @principle Allows public read access.
     */
    match /members/{memberId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to blog posts. No write access is allowed in this prototype.
     * @path /blog_posts/{blogPostId}
     * @allow (get, list) - Any user can read blog post data.
     * @deny (create, update, delete) - No user can create, update, or delete blog post data in this prototype.
     * @principle Allows public read access.
     */
    match /blog_posts/{blogPostId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}