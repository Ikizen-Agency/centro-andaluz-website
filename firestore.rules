/**
 * @fileoverview Firestore Security Rules for the Centro Andaluz de la Habana application.
 *
 * Core Philosophy:
 * This ruleset provides public read access to events, members, and blog posts, with no write access granted to any user.
 *
 * Data Structure:
 * - /events/{eventId}: Stores event data.
 * - /members/{memberId}: Stores member data.
 * - /blog_posts/{blogPostId}: Stores blog post data.
 *
 * Key Security Decisions:
 * - All collections are publicly readable.
 * - No write operations are permitted, effectively making the data read-only.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * @description Grants public read access to all events. No write access is allowed.
     * @path /events/{eventId}
     * @allow (get, list): Any user can read event data.
     * @deny (create, update, delete): No user can create, update, or delete event data.
     * @principle Grants public read access while restricting all write operations.
     */
    match /events/{eventId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants public read access to all members. No write access is allowed.
     * @path /members/{memberId}
     * @allow (get, list): Any user can read member data.
     * @deny (create, update, delete): No user can create, update, or delete member data.
     * @principle Grants public read access while restricting all write operations.
     */
    match /members/{memberId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants public read access to all blog posts. No write access is allowed.
     * @path /blog_posts/{blogPostId}
     * @allow (get, list): Any user can read blog post data.
     * @deny (create, update, delete): No user can create, update, or delete blog post data.
     * @principle Grants public read access while restricting all write operations.
     */
    match /blog_posts/{blogPostId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Grants no access to the "penas" collection.
     * @path /penas
     * @allow none
     * @deny all
     * @principle Explicitly denies access to this collection.
     */
    match /penas {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}